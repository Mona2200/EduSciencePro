@using EduSciencePro.ViewModels.Response
@model ProjectViewModel[];

@{
    ViewData["Title"] = "Ваши проекты";
    Layout = "_Layout";
}

<div class="border_blue p-4 m-3 bg-white row">
    <h3 class="mb-5 mt-2 underline_h3 text-center">Ваши проекты</h3>

    <p class="m-auto col-7 col-xl-3"><a class="button_light form-control-plaintext text-center text-decoration-none text-black p-2 mt-4" asp-action="AddProject" asp-controller="Project">Создать проект</a></p>

    <div class="row justify-content-center" id="projects">
        @if (Model != null && Model.Length != 0)
        {
            @foreach (var project in Model)
            {
                <div class="col-md-10" style="padding:10px;">
                    <h5 class="fw-bold">@project.Title</h5>
                    <p>Дата начала и окончания: @project.StartDate - @project.EndDate</p>
                    <p>Финансирующая организация: @project.Organization.Name</p>
                    <p>
                        @if (project.Skills != null)
                            @foreach (var skill in project.Skills)
                            {
                                <span class="bg_blue p-2 m-2">@skill.Name</span>
                            }
                    </p>
                    <p class="text-center"><a asp-action="LookingProject" asp-controller="Project" asp-route-projectId="@project.Id">Узнать больше</a></p>
                    <p class="text-center"><a asp-action="DeleteProject" asp-controller="Project" asp-route-projectId="@project.Id">Удалить</a></p>
                </div>
            }
        }
        else
        {
            <p class="text-center col-md-10 mt-5">Проектов нет.</p>
        }
    </div>

    @if (Model != null && Model.Length == 5)
    {
        <p class="col-7 col-xl-3 m-auto mt-4"><button class="button form-control-plaintext" id="button_addnewstag">Загрузить ещё</button></p>
    }

</div>

<script>
    $(document).ready(function () {
        let take = 5;
        let skip = 0;
        $("#button_addnewstag").click(function () {
            take += 5;
            skip += 5;

            $.ajax({
                url: '/YourProjectsMore/' + take + '/' + skip,
                type: 'POST',
                success: function (data) {
                    

                    for (var i = 0; i < data.length; i++) {
                        var skills = "";
                        if (data[i].skills != null) {
                            for (var j = 0; j < data[i].skills.length; j++) {
                                skills += `<span class="bg_blue p-2 m-2">` + data[i].skills[j].name + `</span>`;
                            }
                        }
                        $("#projects").append(`<div class="col-md-10" style="padding:10px;"><h5 class="fw-bold">` + data[i].title + `</h5><p>Дата начала и окончания: ` + data[i].startDate + ` - ` + data[i].endDate + `</p><p>Финансирующая организация: ` + data[i].organization.name + `</p><p>` + skills + `</p><p class="text-center"><a href="/LookingProject?projectId=` + data[i].id + `">Узнать больше</a></p><p class="text-center"><a href="/DeleteProject?projectId=` + data[i].id + `">Удалить</a></p></div>`);
                    }
                    if (data.length < 5) {
                        $("#button_addnewstag").addClass('d-none');
                    }
                }
            });
        });
    });
</script>