@using EduSciencePro.ViewModels.Request
@model AddProjectViewModel;

<div class="col-md-8">
    <form class="text-center d-flex justify-content-center row" method="post" asp-action="AddProject" asp-controller="Project" asp-route-OrganizationName="@Model.OrganizationName">

        <h3 class="mb-5 mt-5">Создание проекта</h3>

        <div class="col-md-7">
            <label asp-for="Title" class="text-start label_input mt-4 w-100"></label>
            <p><input class="text-center w-100 p-1" asp-for="Title" placeholder="Название" value="@Model.Title"></p>
            <p><span asp-validation-for="Title" class="text-danger mb-3 col-md-6 text-center"></span></p>
</div>

        <div class="col-md-7 row justify-content-between">
           <div class="col-md-5">
                <label asp-for="StartDate" class="text-start label_input mt-4 w-100"></label>
                <p><input class="text-center w-100 p-1" asp-for="StartDate" value="@Model.StartDate" min="@Model.minStartDate"></p>
                <p><span asp-validation-for="StartDate" class="text-danger mb-3 col-md-6 text-start"></span></p>
           </div>

           <div class="col-md-5">
                <label asp-for="EndDate" class="text-start label_input mt-4 w-100"></label>
                <p><input class="text-center w-100 p-1" asp-for="EndDate" value="@Model.EndDate" min="@Model.minEndDate"></p>
                <p><span asp-validation-for="EndDate" class="text-danger mb-3 col-md-6 text-start"></span></p>
           </div>
        </div>

        <div class="col-md-7">
            <label asp-for="OrganizationName" class="text-start label_input mt-4 w-100"></label>
            <p><input class="text-center w-100 p-1" asp-for="OrganizationName" value="@Model.OrganizationName" disabled></p>
        </div>

        <a class="mt-4 mb-3" data-bs-toggle="collapse" data-bs-target="#input_income" style="cursor:pointer">Указать предлагаемый доход</a>
        <div class="col-md-7 collapse" id="input_income">
            <label asp-for="Income" class="text-start label_input mt-4 w-100"></label>
            <p class="col-md-6"><input class="text-center w-100 p-1" asp-for="Income" value="@Model.Income" min="10000"></p>
            <p><span asp-validation-for="Income" class="text-danger mb-3 col-md-6 text-start"></span></p>
        </div>

        <div class="col-md-7">
            <label asp-for="Description" class="text-start label_input mt-4 w-100"></label>
            <p><textarea rows="5" class="text-start w-100 p-1" asp-for="Description" value="@Model.Description"></textarea></p>
            <p><span asp-validation-for="Description" class="text-danger mb-3 col-md-6 text-start"></span></p>
        </div>

        <div class="col-md-7">
            <label asp-for="Competencies" class="text-start label_input mt-4 w-100"></label>
            <p>
                <textarea rows="5" class="text-start w-100 p-1" asp-for="Competencies" value="@Model.Competencies"></textarea><span class="position-absolute text-black-50" style="transform: translateY(2em);padding-left: 20px;">Введите компетенции через enter</span>
            </p>
            <p><span asp-validation-for="Competencies" class="text-danger mb-3 col-md-6 text-start"></span></p>
        </div>

        <div class="col-md-7">
            <label asp-for="Conditions" class="text-start label_input mt-4 w-100"></label>
            <p><textarea rows="5" class="text-start w-100 p-1" asp-for="Conditions" value="@Model.Conditions"></textarea><span class="position-absolute text-black-50" style="transform: translateY(2em);padding-left: 20px;">Введите условия через enter</span></p>
            <p><span asp-validation-for="Conditions" class="text-danger mb-3 col-md-6 text-start"></span></p>
        </div>

        <div class="col-md-7">
            <label asp-for="Contacts" class="text-start label_input mt-4 w-100"></label>
            <p><input class="text-center w-100 p-1" asp-for="Contacts" value="@Model.Contacts" placeholder="Email"></p>
            <p><span asp-validation-for="Contacts" class="text-danger mb-3 col-md-6 text-start"></span></p>
        </div>

        <div class="col-md-7">
            <label asp-for="Skills" class="text-start label_input mt-3 w-100"></label>
            <input id="tags_input" class="d-none" asp-for="Skills">
            <p class="text-start"><input class="TagsInput text-center w-75 p-1" placeholder="Навыки"><span id="tag_click" class="span_click">+</span></p>
            <p class="Search_Tags position-absolute m-0"></p>
            <div class="text-start mb-4" id="div_tags"></div>
        </div>

        <p><button class="button form-control-plaintext m-auto w-50 mt-4" id="button_addpost">Опубликовать</button></p>

    </form>
</div>
