@using EduSciencePro.ViewModels.Response
@model CoursesTagsViewModel;

@{
    ViewData["Title"] = "Курсы и программы";
    Layout = "_Layout";
}

<div class="border_blue p-4 m-3 bg-white">
    <p class="w-100 text-end"><a class="mr-2" asp-action="YourCourse" asp-controller="Course">Ваши курсы/программы</a></p>


    <h3 class="mb-5 mt-2 underline_h3 text-center">Курсы и программы</h3>

    <div class="row justify-content-center" id="projects">

        <div class="col-10 m-auto d-flex justify-content-between mb-3 row">

            <div class="col-9" id="tags_div">
                @{
                    if (Model.Tags == null || Model.Tags.Count() == 0)
                    {
                        <span class="p-1 border_blue all_tags">Все теги</span>
                    }
                    else
                    {
                        foreach (var tag in Model.Tags)
                        {
                            <span class="p-1 border_blue">@tag</span>
                        }
                    }
                }
            </div>
            <div class="col-3">
                <button class="button form-control-plaintext p-1" data-bs-toggle="collapse" data-bs-target="#tags_form" aria-expanded="false" aria-controls="tags_form">Добавить свой фильтр</button>
            </div>
        </div>

        <div class="col-10 collapse m-auto mt-2 mb-3" id="tags_form">

            <label class="text-start label_input w-100 mt-4">Направления</label>
            <input class="text-center w-75 p-1" placeholder="Направление" id="input_tag" />
            <p><button class="button form-control-plaintext w-25 mt-4 mr-2 d-inline-block" id="button_addtag">Добавить</button><button class="button form-control-plaintext w-25 mt-4 d-inline-block" id="button_removetag">Очистить</button></p>
        </div>

        @if (Model != null && Model.Courses.Length != 0)
        {
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-10 mt-4 mb-4" style="padding:10px;">
                    @{
                        var fullname = $"{course.User.FirstName} {course.User.LastName} {course.User.MiddleName}";
                    }
                    <a asp-controller="User" asp-action="GetUser" asp-route-userId="@course.User.Id" class="form-control-plaintext text-decoration-none"><h5 class="fw-bold">@fullname</h5></a>
                    <p>Образование: @course.Education.Name</p>
                    <p>Место работы: @course.PlaceWork.Name</p>
                    <p>Специализация: @course.Specialization</p>
                    <p>Пройденные курсы/программы повышения квалификации и переподготовки:</p>
                    <ul class="courses list-group list-group-flush">
                        @if (course.CompletedCourses != null)
                        {
                            @foreach (var programm in course.CompletedCourses)
                            {
                                <li class="list-group-item">&bull; @programm</li>
                            }
                        }
                    </ul>
                    <p class="mt-3">Необходимость в получении дополнительных навыков:</p>
                    <div class="progress" role="progressbar" aria-valuenow="@course.NeedSkills" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg_blue text-black" style="width:@course.NeedSkills%">@course.NeedSkills%</div>
                    </div>
                    <p class="mt-3">
                        @if (course.Skills != null)
                            @foreach (var skill in course.Skills)
                            {
                                <span class="bg_blue p-2 m-2 d-inline-block">@skill.Name</span>
                            }
                    </p>
                </div>
            }
        }
        else
        {
            <p class="text-center col-md-10">Курсов и программ нет. Возвращайтесь позже.</p>
        }
    </div>
    @if (Model.Courses != null && Model.Courses.Length == 5)
    {
        <p><button class="button form-control-plaintext w-25 m-auto mt-4" id="button_addnewstag">Загрузить ещё</button></p>
    }
</div>

<script>
    $(document).ready(function () {
        let take = 5;
        let skip = 0;
        var tags = "";
        $("#tags_div").children().each(function () {
            if (!$(this).hasClass("all_tags")) {
                tags += $(this).text() + "_";
            }
        });
        $("#button_addtag").click(function () {
            tags += $("#input_tag").val() + "_";
            window.location.href = '/CoursesTag/' + tags;
        });
        $("#button_removetag").click(function () {
            window.location.href = '/Courses';
        });
        $("#button_addnewstag").click(function () {
            take += 5;
            skip += 5;

            $.ajax({
                url: '/CoursesMore/' + take + '/' + skip + '/' + tags,
                type: 'POST',
                success: function (data) {
                    var skills = "";
                    var programms = "";
                    var name = data[i].user.firstName + " " + data[i].user.lastName + " " + data[i].user.middleName;

                    for (var i = 0; i < data.length; i++) {

                        if (data[i].skills != null) {
                            for (var j = 0; j < data[i].skills.length; j++) {
                                skills += `<span class="bg_blue p-2 m-2">` + data[i].skills[j].name + `</span>`;
                            }
                        }

                        if (data[i].completedCourses != null) {
                            for (var j = 0; j < data[i].completedCourses.length; j++) {
                                programms += `<li class="list-group-item">&bull; ` + data[i].completedCourses[j] + `</li>`;
                            }
                        }

                        $("#projects").append(`<div class="col-md-10 mt-4 mb-4" style="padding:10px;"><a href="/GetUser?userId=` + data[i].user.id + `" class="form-control-plaintext text-decoration-none"><h5 class="fw-bold">` + name + `</h5></a><p>Образование: ` + data[i].education.name + `</p><p>Место работы: ` + data[i].placeWork.name + `</p><p>Специализация: ` + data[i].specialization + `</p><p>Пройденные курсы/программы повышения квалификации и переподготовки:</p><ul class="courses list-group list-group-flush">` + programms + `</ul><p class="mt-3">Необходимость в получении дополнительных навыков:</p><div class="progress" role="progressbar" aria-valuenow="` + data[i].needSkills + `" aria-valuemin="0" aria-valuemax="100"><div class="progress-bar bg_blue text-black" style="width:` + data[i].needSkills + `%">` + data[i].needSkills + `%</div></div><p class="mt-3">` + skills + `</p></div>`);
                    }
                    if (data.length < 5) {
                        $("#button_addnewstag").addClass('d-none');
                    }
                }
            });
        });
    });
</script>