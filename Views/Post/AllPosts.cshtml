@using EduSciencePro.ViewModels.Response
@model AllPostsViewModel;

<div class="col-md-12 row">
   <div class="col-md-8 row">
        <p class="underline mt-3 mb-3" style="margin-left:10px;">Новости</p>
      @foreach (var news in Model.News)
      {
            <div class="col-md-6" style="padding:10px;">
                <div class="position-relative" style="height:270px;background-image:url(data:image/jpeg;base64,@(Convert.ToBase64String(news.Cover)));background-position:center;background-size:cover;">
                    <div style="height:270px;background: rgba(0, 0, 0, 0.6);left:0;right:0;" class="position-absolute"></div>
                    <div style="height:270px;padding: 20px;left:0;right:0;" class="position-absolute d-flex flex-column justify-content-end">
                        <p class="small color-blue">@news.CreatedDate</p>
                        <p class="text-uppercase text-white">@news.Title</p>
                        <p class="row">
                                        <span class="col-md-2">
                                            <span class="text-white">@news.Likes.Length</span>
                                                <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                </svg>
                                        </span>

                                        <span class="col-md-2">
                                            <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" />
                                            </svg>
                                        </span>
                                    </p>
                    </div>
                </div>
            </div>
            
      }
   </div>

   <div class="col-md-4">
        <p class="underline mt-3 mb-3" style="margin-left:10px;">Актуальные обсуждения</p>
        @foreach (var discuss in Model.Discuss)
        {
           <div style="padding:10px;">
              <p class="mt-2 mb-2">@discuss.Title</p>
                <p class="row">
                    <span class="col-md-2">
                        <span>@discuss.Likes.Length</span>
                        <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                        </svg>
                    </span>

                    <span class="col-md-2">
                        <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" />
                        </svg>
                    </span>
                </p>
              </div>
        }
   </div>
</div>
