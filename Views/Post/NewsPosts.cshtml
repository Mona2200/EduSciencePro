@using EduSciencePro.ViewModels.Response
@model PostsAndUserIdViewModel;

@{
    ViewData["Title"] = "Последние новости";
    Layout = "_Layout";
}

<div class="border_blue p-4 m-3 bg-white">
    <h3 class="mb-5 mt-5 underline_h3 text-center">Последние новости</h3>

    <div class="row posts">

        <div class="col-10 m-auto d-flex justify-content-between mb-3 row">

            <div class="col-9" id="tags_div">
                @{
                    if (Model.Tags == null || Model.Tags.Count() == 0)
                    {
                        <span class="p-1 border_blue all_tags">Все теги</span>
                    }
                    else
                    {
                        foreach (var tag in Model.Tags)
                        {
                            <span class="p-1 border_blue">@tag.Name</span>
                        }
                    }
                }
            </div>
            <div class="col-3">
                <button class="button form-control-plaintext p-1" data-bs-toggle="collapse" data-bs-target="#tags_form" aria-expanded="false" aria-controls="tags_form">Добавить свой фильтр</button>
            </div>
        </div>

        <div class="col-10 collapse m-auto mt-2 mb-3" id="tags_form">

            <label class="text-start label_input w-100 mt-4">Направления</label>
            <input class="text-center w-75 p-1" placeholder="Направление" id="input_tag" />
            <p><button class="button form-control-plaintext w-25 mt-4" id="button_addtag">Добавить</button></p>
            <p><button class="button form-control-plaintext w-25 mt-4" id="button_removetag">Очистить</button></p>
        </div>

        @{
            int i = 1;
            foreach (var news in Model.Posts)
            {
                if (i % 5 == 0 && i > 0)
                {
                    <div class="col-md-12" style="padding:10px;">
                        <a asp-action="LookingPost" asp-controller="Post" asp-route-postId="@news.Id">
                            <div class="position-relative" style="height:160px;background-image:url(/src/bg_post.png);background-position:center;background-size:cover;">
                                <div style="height:160px;padding: 20px;left:0;right:0;" class="position-absolute d-flex flex-column justify-content-end">
                                    <p class="small text-black">@news.CreatedDate</p>
                                    <p class="text-uppercase text-black">@news.Title</p>
                                    <p class="row">
                                        <span class="col-xl-1 col-xxl-1 col-lg-1 col-md-1 col-sm-4 col-5">
                                            <span>@news.Likes.Length</span>

                                            @if (Model.UserId != null)
                                            {
                                                @if (news.Likes.FirstOrDefault(l => l.UserId == Model.UserId) != null)
                                                {
                                                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#F8312F" />
                                                    </svg>
                                                }
                                                else
                                                {
                                                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                    </svg>
                                                }
                                            }
                                            else
                                            {
                                                <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                </svg>
                                            }


                                        </span>

                                        <span class="col-xl-1 col-xxl-1 col-lg-1 col-md-1 col-sm-4 col-5">
                                            <span>@news.Comments.Length</span>
                                            <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" />
                                            </svg>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </a>

                    </div>
                }
                else
                {
                    <div class="col-md-6" style="padding:10px;">
                        <a asp-action="LookingPost" asp-controller="Post" asp-route-postId="@news.Id">
                            @if (news.Cover != null)
                            {
                                <div class="position-relative" style="height:270px;background-image:url(data:image/jpeg;base64,@(Convert.ToBase64String(news.Cover)));background-position:center;background-size:cover;">
                                    <div style="height:270px;background: rgba(0, 0, 0, 0.8);left:0;right:0;" class="position-absolute"></div>
                                    <div style="height:270px;padding: 20px;left:0;right:0;" class="position-absolute d-flex flex-column justify-content-end">
                                        <p class="small color-blue">@news.CreatedDate</p>
                                        <p class="text-uppercase text-white">@news.Title</p>
                                        <p class="row">
                                            <span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5">
                                                <span class="text-white">@news.Likes.Length</span>

                                                @if (Model.UserId != null)
                                                {
                                                    @if (news.Likes.FirstOrDefault(l => l.UserId == Model.UserId) != null)
                                                    {
                                                        <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#F8312F" />
                                                        </svg>
                                                    }
                                                    else
                                                    {
                                                        <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                        </svg>
                                                    }
                                                }
                                                else
                                                {
                                                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                    </svg>
                                                }


                                            </span>

                                            <span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5">
                                                <span class="text-white">@news.Comments.Length</span>
                                                <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" />
                                                </svg>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="position-relative" style="height:270px;background-image:url(/src/bg_post.png);background-position:center;background-size:cover;">
                                    <div style="height:270px;background: rgba(0, 0, 0, 0.8);left:0;right:0;" class="position-absolute"></div>
                                    <div style="height:270px;padding: 20px;left:0;right:0;" class="position-absolute d-flex flex-column justify-content-end">
                                        <p class="small color-blue">@news.CreatedDate</p>
                                        <p class="text-uppercase text-white">@news.Title</p>
                                        <p class="row">
                                            <span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5">
                                                <span>@news.Likes.Length</span>

                                                @if (Model.UserId != null)
                                                {
                                                    @if (news.Likes.FirstOrDefault(l => l.UserId == Model.UserId) != null)
                                                    {
                                                        <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#F8312F" />
                                                        </svg>
                                                    }
                                                    else
                                                    {
                                                        <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                        </svg>
                                                    }
                                                }
                                                else
                                                {
                                                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                                    </svg>
                                                }


                                            </span>

                                            <span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5">
                                                <span>@news.Comments.Length</span>
                                                <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" />
                                                </svg>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            }
                        </a>

                    </div>
                }
                i++;
            }

        }
    </div>
    @if (Model.Posts.Length == 5)
    {
    <p><button class="button form-control-plaintext w-25 m-auto mt-4" id="button_addnewstag">Загрузить ещё</button></p>
    }
</div>

<script>
    $(document).ready(function () {
        var userId = '@Model.UserId.ToString()';
        let take = 5;
        let skip = 0;
        var tags = "";
        $("#tags_div").children().each(function () {
            if (!$(this).hasClass("all_tags")) {
                tags += $(this).text() + "_";
            }
        });
        $("#button_addtag").click(function () {
            tags += $("#input_tag").val() + "_";
            window.location.href = '/NewsPostsTag/' + tags;
        });
        $("#button_removetag").click(function () {
            window.location.href = '/NewsPosts';
        });
        $("#button_addnewstag").click(function () {
            take += 5;
            skip += 5;

            $.ajax({
                url: '/NewsPostsMore/' + take + '/' + skip + '/' + tags,
                type: 'POST',
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        var like = "";
                        if (userId != null) {
                            var k = false;
                            for (var j = 0; j < data[i].likes.length; j++) {
                                if (data[i].likes[j].userId == userId) {
                                    k = true;
                                }
                            }
                            if (k) {
                                like += `<svg width="20" height = "19" viewBox = "0 0 20 19" fill = "none" xmlns = "http://www.w3.org/2000/svg" ><path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill = "#F8312F" /></svg>`;
                            }
                            else {
                                like += `<svg width="20" height = "19" viewBox = "0 0 20 19" fill = "none" xmlns = "http://www.w3.org/2000/svg" ><path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill = "#CDE7FF" /></svg>`;
                            }

                        }
                        else {
                            like = `<svg width="20" height = "19" viewBox = "0 0 20 19" fill = "none" xmlns = "http://www.w3.org/2000/svg" ><path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill = "#CDE7FF" /></svg>`;
                        }


                        var bg = "";
                        if (i == 4 || data[i].cover == null) {
                            bg += `<div class="position-relative" style="height:270px;background-image:url(/src/bg_post.png);background-position:center;background-size:cover;"><div style="height:270px;background: rgba(0, 0, 0, 0.8);left:0;right:0;" class="position-absolute"></div><div style="height:270px;padding: 20px;left:0;right:0;" class="position-absolute d-flex flex-column justify-content-end"><p class="small color-blue">` + data[i].createdDate + `</p><p class="text-uppercase text-white">` + data[i].title + `</p><p class="row"><span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5"><span>` + data[i].likes.length + ` </span>` + like + `</span><span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5"><span> ` + data[i].comments.length + `</span><svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" /></svg></span></p></div></div>`;
                        }
                        else {
                            bg += `<div class="position-relative" style="height:270px;background-image:url(data:image/jpeg;base64,` + data[i].cover +`);background-position:center;background-size:cover;"><div style="height:270px;background: rgba(0, 0, 0, 0.8);left:0;right:0;" class="position-absolute"></div><div style="height:270px;padding: 20px;left:0;right:0;" class="position-absolute d-flex flex-column justify-content-end"><p class="small color-blue">` + data[i].createdDate + `</p><p class="text-uppercase text-white">` + data[i].title + `</p><p class="row"><span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5"><span class="text-white">` + data[i].likes.length + ` </span>` + like + `</span><span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-5"><span class="text-white"> ` + data[i].comments.length + `</span><svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" /></svg></span></p></div></div>`;
                        }

                        

                        $(".posts").append(`<div class="col-md-6" style="padding:10px;"><a href="/LookingPost?postId=` + data[i].id + `">` + bg +`</a></div>`)
                    }
                    if (data.length < 5) {
                        $("#button_addnewstag").addClass('d-none');
                    }
                    console.log(data);
                }
            });
        });
    });
</script>
