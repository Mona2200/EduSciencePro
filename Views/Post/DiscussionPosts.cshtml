@using EduSciencePro.ViewModels.Response
@model PostsAndUserIdViewModel;

@{
    ViewData["Title"] = "Последние обсуждения";
    Layout = "_Layout";
}

<div class="border_blue p-4 m-3 bg-white">
    <h3 class="mb-5 mt-5 underline_h3 text-center">Последние обсуждения</h3>

    <div class="row justify-content-center posts">

        <div class="col-10 m-auto d-flex justify-content-between mb-3 row">

            <div class="col-9" id="tags_div">
                @{
                    if (Model.Tags == null || Model.Tags.Count() == 0)
                    {
                        <span class="p-1 border_blue all_tags">Все теги</span>
                    }
                    else
                    {
                        foreach (var tag in Model.Tags)
                        {
                            <span class="p-1 border_blue">@tag</span>
                        }
                    }
                }
            </div>
            <div class="col-3">
                <button class="button form-control-plaintext p-1" data-bs-toggle="collapse" data-bs-target="#tags_form" aria-expanded="false" aria-controls="tags_form">Добавить свой фильтр</button>
            </div>
        </div>

        <div class="col-10 collapse m-auto mt-2 mb-3" id="tags_form">

            <label class="text-start label_input w-100 mt-4">Направления</label>
            <input class="text-center w-75 p-1" placeholder="Направление" id="input_tag" />
            <p><button class="button form-control-plaintext w-25 mt-4 mr-2 d-inline-block" id="button_addtag">Добавить</button><button class="button form-control-plaintext w-25 mt-4 d-inline-block" id="button_removetag">Очистить</button></p>
        </div>

        @{
            foreach (var discuss in Model.Posts)
            {
                <div class="col-md-10" style="padding:10px;">
                    <div class="d-flex flex-row align-items-center">
                        @if (discuss.User.Image != null)
                        {
                            <div style="height:40px;width:40px;background-image:url(data:image/jpeg;base64,@(Convert.ToBase64String(discuss.User.Image)));background-position:center;background-size:cover;"></div>
                        }
                        else
                        {
                            <div style="height:40px;width:40px;background-image:url(/src/7fb117f2628e83a0fdfc18e0a3dc7cc0.png);background-position:center;background-size:cover;"></div>
                        }
                        @{
                            var fullName = $"{discuss.User.FirstName} {discuss.User.LastName} {discuss.User.MiddleName}";
                        }
                        <p style="margin:0 10px;">@fullName</p>
                        <p class="color-blue" style="margin:0 10px;">@discuss.CreatedDate</p>
                    </div>

                    <div>
                        <h5 style="margin: 20px 0;">@discuss.Title</h5>
                    </div>

                    <div>
                        <p class="posts_content">@Html.Raw(discuss.Content)</p>
                    </div>

                    <p>
                        @if (discuss.Tags != null)
                        {
                            @foreach (var tag in discuss.Tags)
                            {
                                <span class="bg_blue p-2 m-2">@tag.Name</span>
                            }
                        }
                    </p>

                    <p class="row">
                        <span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-sm-4 col-5">
                            <span>@discuss.Likes.Length</span>
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                @if (discuss.Likes.FirstOrDefault(l => l.UserId == Model.UserId) != null)
                                {
                                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg" style="cursor:pointer;" onclick="like_post('@discuss.Id', this)">
                                        <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#F8312F" />
                                    </svg>
                                }
                                else
                                {
                                    <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg" style="cursor:pointer;" onclick="like_post('@discuss.Id', this)">
                                        <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                    </svg>
                                }
                            }
                            else
                            {
                                <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill="#CDE7FF" />
                                </svg>
                            }

                        </span>

                        <span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-sm-4 col-5">
                            <span>@discuss.Comments.Length</span>
                            <a asp-action="LookingPost" asp-controller="Post" asp-route-postId="@discuss.Id">
                                <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" />
                                </svg>
                            </a>
                        </span>
                    </p>
                </div>
            }
        }
    </div>
    @if (Model.Posts.Length == 5)
    {
        <p><button class="button form-control-plaintext w-25 m-auto mt-4" id="button_addnewstag">Загрузить ещё</button></p>
    }
</div>

<script>
    $(document).ready(function () {
        var userId = '@Model.UserId.ToString()';
        let take = 5;
        let skip = 0;
        var tags = "";
        $("#tags_div").children().each(function () {
            if (!$(this).hasClass("all_tags")) {
                tags += $(this).text() + "_";
            }
        });
        $("#button_addtag").click(function () {
            tags += $("#input_tag").val() + "_";
            window.location.href = '/DiscussionsPostsTag/' + tags;
        });
        $("#button_removetag").click(function () {
            window.location.href = '/DiscussionPosts';
        });
        $("#button_addnewstag").click(function () {
            take += 5;
            skip += 5;

            $.ajax({
                url: '/NewsPostsMore/' + take + '/' + skip + '/' + tags,
                type: 'POST',
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        var like = "";
                        var img = "";
                        var tags = "";

                        if (data[i].tags != null) {
                            for (var j = 0; j < data[i].tags.length; j++) {
                                tags += `<span class="bg_blue p-2 m-2" >` + data[i].tags[j].name + `</span>`;
                            }
                        }

                        var name = data[i].user.firstName + " " + data[i].user.lastName + " " + data[i].user.middleName;

                        if (data[i].user.image != null) {
                            img += `<div style="height:40px;width:40px;background-image:url(data:image/jpeg;base64,` + data[i].user.image + `);background-position:center;background-size:cover;" > </div>`;
                        }
                        else {
                            img += `<div style="height:40px;width:40px;background-image:url(/src/7fb117f2628e83a0fdfc18e0a3dc7cc0.png);background-position:center;background-size:cover;" > </div>`;
                        }

                        if (userId != "") {
                            var k = false;
                            for (var j = 0; j < data[i].likes.length; j++) {
                                if (data[i].likes[j].userId == userId) {
                                    k = true;
                                }
                            }
                            if (k) {
                                like += `<svg width="20" height = "19" viewBox = "0 0 20 19" fill = "none" xmlns = "http://www.w3.org/2000/svg" style = "cursor:pointer;" onclick = "like_post('` + data[i].id + `', this)" ><path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill = "#F8312F" /></svg>`;
                            }
                            else {
                                like += `<svg width="20" height = "19" viewBox = "0 0 20 19" fill = "none" xmlns = "http://www.w3.org/2000/svg" style = "cursor:pointer;" onclick = "like_post('` + data[i].id + `', this)" ><path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill = "#CDE7FF" /></svg>`;
                            }
                        }
                        else {
                            like += `<svg width="20" height = "19" viewBox = "0 0 20 19" fill = "none" xmlns = "http://www.w3.org/2000/svg" ><path d="M10 18.35L8.55 17.03C3.4 12.36 0 9.27 0 5.5C0 2.41 2.42 0 5.5 0C7.24 0 8.91 0.81 10 2.08C11.09 0.81 12.76 0 14.5 0C17.58 0 20 2.41 20 5.5C20 9.27 16.6 12.36 11.45 17.03L10 18.35Z" fill = "#CDE7FF" /></svg>`;
                        }



                        $(".posts").append(`<div class="col-md-10" style="padding:10px;"><div class="d-flex flex-row align-items-center">` + img + `<p style="margin:0 10px;">` + name + `</p><p class="color-blue" style="margin:0 10px;">` + data[i].createdDate + `</p></div><div><h5 style="margin: 20px 0;">` + data[i].title + `</h5></div><div><p class="posts_content">` + data[i].content + `</p></div><p>` + tags + `</p><p class="row"><span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-sm-4 col-5"><span>` + data[i].likes.length + `  </span>` + like + `</span><span class="col-xl-3 col-xxl-2 col-lg-4 col-md-2 col-sm-4 col-sm-4 col-5"><span> ` + data[i].comments.length + ` </span><a href="/LookingPost?postId=` + data[i].id + `"><svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18.3 18.3L16 16H2C1.45 16 0.979333 15.8043 0.588 15.413C0.196 15.021 0 14.55 0 14V2C0 1.45 0.196 0.979 0.588 0.587C0.979333 0.195667 1.45 0 2 0H18C18.55 0 19.021 0.195667 19.413 0.587C19.8043 0.979 20 1.45 20 2V17.575C20 18.025 19.796 18.3373 19.388 18.512C18.9793 18.6873 18.6167 18.6167 18.3 18.3Z" fill="#CDE7FF" /></svg></a></span></p></div>`)
                    }
                    if (data.length < 5) {
                        $("#button_addnewstag").addClass('d-none');
                    }
                }
            });
        });
    });
</script>