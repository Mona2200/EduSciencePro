@using EduSciencePro.ViewModels.Response
@model List<InternshipViewModel>;

@{
    ViewData["Title"] = "Ваши практики и стажировки";
    Layout = "_Layout";
}

<div class="border_blue p-4 m-3 bg-white row">
    <h3 class="mb-5 mt-2 underline_h3 text-center">Ваши практики и стажировки</h3>

    <p class="m-auto col-7 col-xl-3"><a class="button_light form-control-plaintext text-center text-decoration-none text-black p-2 mt-4" asp-action="AddInternship" asp-controller="Internship">Создать практику/стажировку</a></p>

    <div class="row justify-content-center" id="projects">
        @if (Model != null && Model.Length != 0)
        {
            @foreach (var internship in Model)
            {
                <div class="col-md-10 mt-4 mb-4" style="padding:10px;">
                    <h5 class="fw-bold">@internship.Name</h5>
                    <p>Дата начала и окончания: @internship.StartDate - @internship.EndDate</p>
                    <p>Организация: @internship.Organization.Name</p>
                    <p>Тип занятости: @internship.EmploymentType</p>
                    <p>Зарплата: @internship.Salary</p>
                    <p>
                        @foreach (var skill in internship.Skills)
                        {
                            <span class="bg_blue p-2 m-2 d-inline-block">@skill.Name</span>
                        }
                    </p>
                    <p class="text-center"><a asp-action="LookingInternship" asp-controller="Internship" asp-route-internshipId="@internship.Id">Узнать больше</a></p>
                    <p class="text-center"><a asp-action="DeleteInternship" asp-controller="Internship" asp-route-internshipId="@internship.Id">Удалить</a></p>
                </div>
            }
        }
        else
        {
            <p class="text-center col-md-10 mt-5">Практик и стажировок нет.</p>
        }
    </div>
    @if (Model != null && Model.Length == 5)
    {
        <p class="col-7 col-xl-3 m-auto mt-4"><button class="button form-control-plaintext" id="button_addnewstag">Загрузить ещё</button></p>
    }
</div>

<script>
    $(document).ready(function () {
        let take = 5;
        let skip = 0;
        $("#button_addnewstag").click(function () {
            take += 5;
            skip += 5;

            $.ajax({
                url: '/InternshipsMore/' + take + '/' + skip,
                type: 'POST',
                success: function (data) {
                    var skills = "";

                    for (var i = 0; i < data.length; i++) {

                        if (data[i].skills != null) {
                            for (var j = 0; j < data[i].skills.length; j++) {
                                skills += `<span class="bg_blue p-2 m-2">` + data[i].skills[j].name + `</span>`;
                            }
                        }
                        $("#projects").append(`<div class="col-md-10 mt-4 mb-4" style="padding:10px;"><h5 class="fw-bold">` + data[i].name + `</h5><p>Дата начала и окончания: ` + data[i].startDate + ` - ` + data[i].endDate + `</p><p>Организация: ` + data[i].organization.name + `</p><p>Тип занятости: ` + data[i].employmentType + `</p><p>Зарплата: ` + data[i].salary + `</p><p>` + skills + `</p><p class="text-center"><a href="/LookingInternship?internshipId=` + data[i].id + `">Узнать больше</a></p><p class="text-center"><a href="/DeleteInternship?internshipId=` + data[i].id + `">Удалить</a></p></div>`);
                    }
                    if (data.length < 5) {
                        $("#button_addnewstag").addClass('d-none');
                    }
                }
            });
        });
    });
</script>
