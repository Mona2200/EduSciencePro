@using EduSciencePro.ViewModels.Response
@model MaterialsAndTagsViewModel;

@{
    ViewData["Title"] = "Учебные материалы";
    Layout = "_Layout";
}

<div class="border_blue p-4 m-3 bg-white">

    <h3 class="mb-5 mt-2 underline_h3 text-center">Учебные материалы</h3>

    <p><a class="button_light form-control-plaintext text-center m-auto w-25 p-2 mt-4" asp-action="AddMaterial" asp-controller="Material">Добавить учебный материал</a></p>

    <div class="row justify-content-center" id="projects">

        <div class="col-10 m-auto d-flex justify-content-between mb-3 row">

            <div class="col-9" id="tags_div">
                @{
                    if (Model.Tags == null || Model.Tags.Count() == 0)
                    {
                        <span class="p-1 border_blue all_tags">Все теги</span>
                    }
                    else
                    {
                        foreach (var tag in Model.Tags)
                        {
                            <span class="p-1 border_blue">@tag</span>
                        }
                    }
                }
            </div>
            <div class="col-3">
                <button class="button form-control-plaintext p-1" data-bs-toggle="collapse" data-bs-target="#tags_form" aria-expanded="false" aria-controls="tags_form">Добавить свой фильтр</button>
            </div>
        </div>

        <div class="col-10 collapse m-auto mt-2 mb-3" id="tags_form">

            <label class="text-start label_input w-100 mt-4">Направления</label>
            <input class="text-center w-75 p-1" placeholder="Направление" id="input_tag" />
            <p><button class="button form-control-plaintext w-25 mt-4 mr-2 d-inline-block" id="button_addtag">Добавить</button><button class="button form-control-plaintext w-25 mt-4 d-inline-block" id="button_removetag">Очистить</button></p>
        </div>

        @if (Model != null && Model.Materials.Length != 0)
        {
            @foreach (var material in Model.Materials)
            {
                <div class="col-md-10 mt-4 mb-4" style="padding:10px;">
                    <h5 class="fw-bold">@material.Title</h5>
                    <p>Специализация: @material.Specialization</p>
                    <p>Тип учебного материала: @material.Type</p>
                    <p>Адрес электронного ресурса: <a href="@material.Url">@material.Url</a></p>
                    <p>Аннотация: @material.Annotation</p>
                    <p>Место издания (организация): @material.Publication</p>
                    <p>
                        @if (material.Tags != null)
                            @foreach (var skill in material.Tags)
                            {
                                <span class="bg_blue p-2 m-2 d-inline-block">@skill.Name</span>
                            }
                    </p>
                </div>
            }
        }
        else
        {
            <p class="text-center col-md-10">Учебных материалов нет. Возвращайтесь позже.</p>
        }
    </div>

    @if (Model.Materials != null && Model.Materials.Length == 5)
    {
        <p><button class="button form-control-plaintext w-25 m-auto mt-4" id="button_addnewstag">Загрузить ещё</button></p>
    }

</div>

<script>
    $(document).ready(function () {
        let take = 5;
        let skip = 0;
        var tags = "";
        $("#tags_div").children().each(function () {
            if (!$(this).hasClass("all_tags")) {
                tags += $(this).text() + "_";
            }
        });
        $("#button_addtag").click(function () {
            tags += $("#input_tag").val() + "_";
            window.location.href = '/MaterialsTag/' + tags;
        });
        $("#button_removetag").click(function () {
            window.location.href = '/Materials';
        });
        $("#button_addnewstag").click(function () {
            take += 5;
            skip += 5;

            $.ajax({
                url: '/MaterialsMore/' + take + '/' + skip + '/' + tags,
                type: 'POST',
                success: function (data) {
                    

                    for (var i = 0; i < data.length; i++) {
                        var tags = "";
                        if (data[i].tags != null) {
                            for (var j = 0; j < data[i].tags.length; j++) {
                                tags += `<span class="bg_blue p-2 m-2">` + data[i].tags[j].name + `</span>`;
                            }
                        }
                        $("#projects").append(`<div class="col-md-10 mt-4 mb-4" style="padding:10px;"><h5 class="fw-bold">` + data[i].title + `</h5><p>Специализация: ` + data[i].specialization + `</p><p>Тип учебного материала: ` + data[i].type + `</p><p>Адрес электронного ресурса: <a href="` + data[i].url + `">` + data[i].url + `</a></p><p>Аннотация: ` + data[i].annotation + `</p><p>Место издания (организация): ` + data[i].publication + `</p><p>` + tags + `</p></div>`);
                    }
                    if (data.length < 5) {
                        $("#button_addnewstag").addClass('d-none');
                    }
                }
            });
        });
    });
</script>